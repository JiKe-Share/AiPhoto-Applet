.wxapps{
	width: 100%;
	text-align: center;
	height: 150rpx;
	/* background-color: #0081FF; */
	margin-top: 20rpx;
}
.wxapps .wxapp{
	width: 95%;
	height: 100%;
	margin: auto;
	background-color: #ffffff;
	border-radius: 20rpx;
	overflow: hidden;
}
.wxapps:nth-child(even)
{
  -webkit-animation:fade-in-right .6s cubic-bezier(.39,.575,.565,1.000) both;
          animation:fade-in-right .6s cubic-bezier(.39,.575,.565,1.000) both
}
.wxapps:nth-child(odd)
{
  -webkit-animation:fade-in-left .6s cubic-bezier(.39,.575,.565,1.000) both;
          animation:fade-in-left .6s cubic-bezier(.39,.575,.565,1.000) both
}
.wxapp .img{
	width: 20%;
	height: 100%;
	display: inline-block;
	/* background-color: #0081FF; */
	vertical-align: middle;
	position: relative;
}
.wxapp .img .fm{
	position: absolute;
	width: 110rpx;
	height: 110rpx;
	left: 50%;
	top: 50%;
	-webkit-transform: translate(-50%,-50%);
	        transform: translate(-50%,-50%);
	background-position: center;
	background-size: 100% auto;
	border-radius: 100%;
}
.wxapp .text{
	width: 62%;
	height: 100%;
	display: inline-block;
	vertical-align: middle;
	text-align: left;
}
.wxapp .text .tit{
	width: 100%;
	height: 30%;
	margin-top: 18rpx;
	color: #000000;
	font-size: 34rpx;
	font-weight: 700;
	white-space: nowrap;
	    text-overflow: ellipsis;
	    overflow: hidden;
	    word-break: break-all;
		padding-left: 10rpx;
}
.wxapp .text .desc{
	width: 100%;
	height: 50%;
	text-align: left;
	 text-overflow: -o-ellipsis-lastline;
	  overflow: hidden;
	  text-overflow: ellipsis;
	  display: -webkit-box;
	  -webkit-line-clamp: 2;
	  -webkit-box-orient: vertical;
	  line-height: 35rpx;
	  padding-left: 10rpx;
}
.wxapp .btn{
	width: 18%;
	height: 100%;
	display: inline-block;
	background-color: #0081FF;
	vertical-align: middle;
	position: relative;
}
.wxapp .btn .go{
	position: absolute;
	width: 110rpx;
	height: 60rpx;
	top: 50%;
	left: 50%;
	-webkit-transform: translate(-50%,-50%);
	        transform: translate(-50%,-50%);
	color: #ffffff;
	font-size: 35rpx;
	font-weight: 700;
}

